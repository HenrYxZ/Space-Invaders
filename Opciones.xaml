<Window x:Class="Tarea5.Opciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opciones" Height="300" Width="396" Icon="/Tarea5;component/Game.ico"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="93*" />
            <RowDefinition Height="39*" />
            <RowDefinition Height="52*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="39*" />
        </Grid.RowDefinitions>
        
        <TextBlock Text="Define la cantidad de recursos que quieres que hayan" TextAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Name="textRecursos" Grid.Row="1" Margin="115,0,115,0"  />
        <TextBlock Text=
                   "Si quieres conectarte a un servidor escribe el IP del servidor,
    de modo contrario puedes no escribir nada. Ejemplo: 127.0.0.1"
                   Grid.Row="2" TextAlignment="Center" VerticalAlignment="Center" Height="46" Margin="0,6,0,0" />
        <Button Name="aceptar" Content="Aceptar" Grid.Row="4" Height="23" HorizontalAlignment="Left" Margin="73,4,0,0" 
                VerticalAlignment="Top" Width="75" Click="aceptar_Click" />
        <Button Name="cancelar" Content="Cancelar" Grid.Row="4" Height="23" Margin="231,4,73,0" VerticalAlignment="Top" 
                Click="cancelar_Click" />
    </Grid>
</Window>
